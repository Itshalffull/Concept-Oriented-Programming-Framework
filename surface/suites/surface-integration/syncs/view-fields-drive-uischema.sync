# ============================================================
# ViewFieldsDriveUISchema â€” surface-integration recommended sync
#
# Reflect visible field changes from library View in Clef Surface
# UI schema overrides.
# ============================================================

sync ViewFieldsDriveUISchema [eager]
when {
  View/setVisibleFields: [ view: ?viewId; fieldIds: ?fields ]
    => ok(view: ?viewId)
}
then {
  UISchema/override: [ schema: ?viewId; overrides: ?fields ]
}
