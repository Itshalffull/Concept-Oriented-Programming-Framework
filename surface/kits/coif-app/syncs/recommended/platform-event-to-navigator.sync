# ============================================================
# PlatformEventToNavigator â€” coif-app recommended sync
#
# When a platform event translates to a "back" action,
# trigger Navigator/back.
# ============================================================

sync PlatformEventToNavigator [eager]
when {
  PlatformAdapter/handlePlatformEvent: [ adapter: ?adapter; event: ?event ]
    => ok(adapter: ?adapter; action: "back")
}
then {
  Navigator/back: [ nav: ?adapter ]
}
