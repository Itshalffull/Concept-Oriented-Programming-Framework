# Pipeline integration â€” ConceptManifest generated triggers projection
# Architecture doc: Clef Bind, Sync Section 3.1

sync ProjectOnManifest [eager]
when {
  SchemaGen/generate: [ spec: ?spec ]
    => [ manifest: ?manifest ]
}
where {
  Generator: { ?plan targets: ?targets }
  filter(length(?targets) > 0)
}
then {
  Projection/project: [ manifest: ?manifest; annotations: ?annotations ]
}
