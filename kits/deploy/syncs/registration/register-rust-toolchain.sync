# Register RustToolchain with PluginRegistry â€” Architecture doc Section 3.8

sync RegisterRustToolchain [eager]
when {
  RustToolchain/register: []
    => [ name: ?name; language: ?lang; capabilities: ?caps ]
}
then {
  PluginRegistry/register: [
    type: "toolchain";
    name: ?name;
    metadata: {
      language: ?lang;
      concept: "RustToolchain";
      action: "resolve";
      capabilities: ?caps
    }
  ]
}
