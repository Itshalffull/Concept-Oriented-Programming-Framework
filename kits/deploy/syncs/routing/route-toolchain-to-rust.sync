sync RouteToolchainToRust [eager]
when {
  Toolchain/resolve: [ language: "rust"; platform: ?plat;
    versionConstraint: ?ver ]
    => [ tool: ?tool; version: ?v; path: ?path;
         capabilities: ?caps ]
}
then {
  RustToolchain/resolve: [ platform: ?plat;
    versionConstraint: ?ver ]
}
