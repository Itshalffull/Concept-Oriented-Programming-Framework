# Record CloudFormationProvider success in BuildCache â€” Section 3.8

sync RecordCacheCloudFormation [eager]
when {
  CloudFormationProvider/generate: [ plan: ?plan ]
    => [ files: ?files ]
  Emitter/writeBatch: []
    => [ results: ?results ]
}
then {
  BuildCache/record: [
    stepKey: ?plan;
    inputHash: ?plan;
    outputHash: ?plan;
    sourceLocator: ?plan;
    deterministic: false
  ]
}
