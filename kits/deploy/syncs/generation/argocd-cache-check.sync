# Check BuildCache before ArgoCDProvider emits â€” Section 3.8

sync CheckCacheBeforeArgoCD [eager]
when {
  GitOps/emit: [ plan: ?plan; controller: "argocd"; repo: ?repo; path: ?path ]
    => [ manifest: ?m; files: ?files ]
}
then {
  BuildCache/check: [
    stepKey: ?plan;
    inputHash: ?plan;
    deterministic: false
  ]
}
