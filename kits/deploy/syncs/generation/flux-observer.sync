# Record FluxProvider completion in GenerationPlan â€” Section 3.8

sync ObserveFlux [eager]
when {
  FluxProvider/emit: [ plan: ?plan; repo: ?repo; path: ?path ]
    => [ files: ?files ]
}
then {
  GenerationPlan/recordStep: [
    stepKey: ?plan;
    status: "done";
    filesProduced: 1;
    cached: false
  ]
}
