# Signing verifies the content hash exists in the ContentHash store.
# Cross-kit sync â€” collaboration uses versioning's ContentHash.

sync SignatureVerifiesHash [eager]
when {
  Signature/sign: [ contentHash: ?hash; identity: ?id ]
    => [ ok(signatureId: ?sig) ]
}
then {
  ContentHash/retrieve: [ hash: ?hash ]
}
