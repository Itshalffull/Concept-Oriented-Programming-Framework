  "invariants": [
    {
      "description": "invariant 1: after clip, markReady behaves correctly",
      "setup": [
        {
          "action": "clip",
          "inputs": [
            {
              "name": "url",
              "value": {
                "kind": "literal",
                "value": "https://example.com/article"
              }
            },
            {
              "name": "mode",
              "value": {
                "kind": "literal",
                "value": "web_article"
              }
            },
            {
              "name": "metadata",
              "value": {
                "kind": "literal",
                "value": "{}"
              }
            }
          ],
          "expectedVariant": "ok",
          "expectedOutputs": [
            {
              "name": "itemId",
              "value": {
                "kind": "literal",
                "value": "cap-1"
              }
            },
            {
              "name": "content",
              "value": {
                "kind": "literal",
                "value": "article text"
              }
            }
          ]
        }
      ],
      "assertions": [
        {
          "action": "markReady",
          "inputs": [
            {
              "name": "itemId",
              "value": {
                "kind": "literal",
                "value": "cap-1"
              }
            }
          ],
          "expectedVariant": "ok",
          "expectedOutputs": []
        }
      ],
      "freeVariables": []
    },
    {
      "description": "invariant 2: after subscribe, detectChanges behaves correctly",
      "setup": [
        {
          "action": "subscribe",
          "inputs": [
            {
              "name": "sourceId",
              "value": {
                "kind": "literal",
                "value": "src-1"
              }
            },
            {
              "name": "schedule",
              "value": {
                "kind": "literal",
                "value": "*/30 * * * *"
              }
            },
            {
              "name": "mode",
              "value": {
                "kind": "literal",
                "value": "api_poll"
              }
            }
          ],
          "expectedVariant": "ok",
          "expectedOutputs": [
            {
              "name": "subscriptionId",
              "value": {
                "kind": "literal",
                "value": "sub-1"
              }
            }
          ]
        }
      ],
      "assertions": [
        {
          "action": "detectChanges",
          "inputs": [
            {
              "name": "subscriptionId",
              "value": {
                "kind": "literal",
                "value": "sub-1"
