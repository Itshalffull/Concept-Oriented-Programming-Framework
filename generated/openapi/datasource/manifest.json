  "invariants": [
    {
      "description": "invariant 1: after register, connect, discover behaves correctly",
      "setup": [
        {
          "action": "register",
          "inputs": [
            {
              "name": "name",
              "value": {
                "kind": "literal",
                "value": "blog_api"
              }
            },
            {
              "name": "uri",
              "value": {
                "kind": "literal",
                "value": "https://blog.example.com/api"
              }
            },
            {
              "name": "credentials",
              "value": {
                "kind": "literal",
                "value": "token:abc"
              }
            }
          ],
          "expectedVariant": "ok",
          "expectedOutputs": [
            {
              "name": "sourceId",
              "value": {
                "kind": "literal",
                "value": "src-1"
              }
            }
          ]
        }
      ],
      "assertions": [
        {
          "action": "connect",
          "inputs": [
            {
              "name": "sourceId",
              "value": {
                "kind": "literal",
                "value": "src-1"
              }
            }
          ],
          "expectedVariant": "ok",
          "expectedOutputs": [
            {
              "name": "message",
              "value": {
                "kind": "literal",
                "value": "connected"
              }
            }
          ]
        },
        {
          "action": "discover",
          "inputs": [
            {
              "name": "sourceId",
              "value": {
                "kind": "literal",
                "value": "src-1"
              }
            }
          ],
          "expectedVariant": "ok",
          "expectedOutputs": [
            {
              "name": "rawSchema",
              "value": {
                "kind": "literal",
                "value": "{\"streams\":[\"posts\",\"authors\"]}"
              }
            }
          ]
        }
      ],
      "freeVariables": []
    }
  ],
