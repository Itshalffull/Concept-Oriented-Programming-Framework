# Record HandlerScaffoldGen completion in GenerationPlan

sync ObserveHandlerScaffold [eager]
  purpose { Track HandlerScaffoldGen run in GenerationPlan. }
when {
  HandlerScaffoldGen/generate: [ conceptName: ?name ]
    => [ files: ?files; filesGenerated: ?count ]
}
then {
  GenerationPlan/recordStep: [
    stepKey: "HandlerScaffoldGen";
    status: "done";
    filesProduced: ?count;
    cached: false
  ]
}
