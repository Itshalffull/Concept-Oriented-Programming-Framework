{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "types": ["node"],
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "paths": {
      "@clef/kernel": ["./kernel/src/index.ts"],
      "@clef/kernel/*": ["./kernel/src/*"],
      "@clef/runtime": ["./kernel/src/index.ts"]
    }
  },
  "include": [
    "kernel/src/**/*.ts",
    "implementations/**/*.ts",
    "infrastructure/**/*.ts",
    "engine/**/*.ts",
    "tests/**/*.ts",
    "cli/**/*.ts",
    "generated/surface/**/*.ts",
    "generated/deploy/**/*.ts",
    "framework-widgets/**/*.ts",
    "framework-widgets/**/*.tsx",
    "examples/**/*.ts",
    "examples/**/*.tsx",
    "kits/**/*.ts"
  ]
}
