@version(1)
concept ThemeSpecSymbolExtractor [I] {

  purpose {
    Symbol extraction provider for Clef Surface theme spec files. Extracts
    token names, scale values, semantic aliases, and mode variants
    as symbols in the surface/* namespace.
  }

  state {
    instances: set I
    extractorRef: I -> String
    handledExtensions: I -> String
  }

  capabilities {
    requires persistent-storage
  }

  actions {
    action initialize() {
      -> ok(instance: I) {
        Register this extractor with PluginRegistry for
        theme spec file extensions.
      }
      -> loadError(message: String) {
        Failed to initialize the theme spec extractor.
      }
    }
  }
}
