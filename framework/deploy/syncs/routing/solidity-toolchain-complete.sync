sync SolidityToolchainComplete [eager]
when {
  SolidityToolchain/resolve: [ platform: ?plat ]
    => [ toolchain: ?l; solcPath: ?path; version: ?ver;
         capabilities: ?caps ]
}
then {
  Toolchain/resolve: [ language: "solidity"; platform: ?plat;
    versionConstraint: ?constraint ]
}
