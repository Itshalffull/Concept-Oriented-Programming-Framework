# Resolve alias names when references are added.
# Ensures forward references can target aliased entities.

# When a reference is added, resolve the target name through the alias system
sync ResolveAliasOnRef [eager]
when {
  Reference/addRef: [ source: ?source; target: ?target ]
    => [ source: ?source ]
}
then {
  Alias/resolve: [ name: ?target ]
}
