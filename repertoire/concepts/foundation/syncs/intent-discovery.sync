// Intent-driven concept discovery

// Auto-create an intent record when a new type is registered, seeding discovery metadata
sync IntentFromSchema [eager]
when {
  TypeSystem/registerType: [ type: ?type; schema: ?schema ]
    => [ type: ?type ]
}
then {
  Intent/define: [ intent: ?type; target: ?type; purpose: ?schema; operationalPrinciple: "" ]
}
