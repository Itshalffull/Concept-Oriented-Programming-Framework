# Conduit Clef App — Environment Variables
# Copy this file to .env and fill in the values for your deployment target.

# ─── General ─────────────────────────────────────────────────────
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# Storage backend: memory | redis | dynamodb | firestore | durable-objects | vercel-kv
STORAGE_BACKEND=memory

# Transport mode: in-process | http | sqs | pubsub
TRANSPORT_MODE=in-process

# ─── Application Secrets ─────────────────────────────────────────
JWT_SECRET=change-me-to-a-secure-random-value

# ─── Redis (Docker Compose, Kubernetes) ──────────────────────────
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ─── AWS (Lambda, ECS) ──────────────────────────────────────────
AWS_REGION=us-east-1
STAGE=prod
# VPC_ID=vpc-xxxxxxxxx
# SUBNET_IDS=subnet-aaa,subnet-bbb

# ─── GCP (Cloud Run, Cloud Functions) ───────────────────────────
GCP_PROJECT_ID=
GCP_REGION=us-central1
TF_STATE_BUCKET=

# ─── Cloudflare Workers ─────────────────────────────────────────
CF_ACCOUNT_ID=
CF_ZONE_ID=
CF_ROUTE=

# ─── Vercel ──────────────────────────────────────────────────────
VERCEL_REGION=iad1
KV_REST_API_URL=
KV_REST_API_TOKEN=

# ─── Kubernetes / Vault ─────────────────────────────────────────
K8S_NAMESPACE=conduit
CONTAINER_REGISTRY=
IMAGE_TAG=latest
VAULT_ADDR=http://127.0.0.1:8200

# ─── Engine URL (for distributed HTTP transport) ─────────────────
ENGINE_URL=http://localhost:3000
