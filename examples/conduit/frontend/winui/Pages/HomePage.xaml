<!-- Conduit Example App - WinUI Home Page XAML -->
<!-- Article feed with ListView and pull-to-refresh. -->

<Page
    x:Class="ConduitApp.Pages.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Padding="16" Background="#5CB85C">
            <TextBlock Text="Global Feed" Style="{StaticResource SubtitleTextBlockStyle}"
                       Foreground="White" FontWeight="Bold" />
        </StackPanel>

        <!-- Loading indicator -->
        <ProgressRing x:Name="LoadingRing" Grid.Row="1" IsActive="True"
                      HorizontalAlignment="Center" VerticalAlignment="Center" />

        <!-- Error display -->
        <StackPanel x:Name="ErrorPanel" Grid.Row="1" Visibility="Collapsed"
                    HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="8">
            <FontIcon Glyph="&#xE783;" FontSize="48" Foreground="Red" />
            <TextBlock x:Name="ErrorText" TextAlignment="Center" Foreground="Red" />
            <Button Content="Retry" Click="OnRetryClick" HorizontalAlignment="Center" />
        </StackPanel>

        <!-- Article list -->
        <ListView x:Name="ArticleList" Grid.Row="1" Visibility="Collapsed"
                  SelectionMode="Single" SelectionChanged="OnArticleSelected"
                  Padding="8">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Padding="12" Spacing="4">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{Binding Author.Username}" Grid.Column="0"
                                       Foreground="#5CB85C" FontWeight="SemiBold" FontSize="12" />
                            <TextBlock Text="{Binding CreatedAtDisplay}" Grid.Column="1"
                                       Foreground="Gray" FontSize="10" />
                        </Grid>
                        <TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="16"
                                   TextTrimming="CharacterEllipsis" MaxLines="2" />
                        <TextBlock Text="{Binding Description}" Foreground="Gray" FontSize="13"
                                   TextTrimming="CharacterEllipsis" MaxLines="2" />
                        <StackPanel Orientation="Horizontal" Spacing="4">
                            <FontIcon Glyph="&#xEB52;" FontSize="12" Foreground="Gray" />
                            <TextBlock Text="{Binding FavoritesCount}" Foreground="Gray" FontSize="11" />
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
