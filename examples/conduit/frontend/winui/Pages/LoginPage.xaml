<!-- Conduit Example App - WinUI Login Page XAML -->
<!-- Email/password form with Sign In and Register buttons. -->

<Page
    x:Class="ConduitApp.Pages.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid VerticalAlignment="Center" HorizontalAlignment="Center" Width="360">
        <StackPanel Spacing="16">
            <TextBlock Text="Sign In" Style="{StaticResource TitleTextBlockStyle}"
                       HorizontalAlignment="Center" FontWeight="Bold" />

            <TextBox x:Name="EmailBox" PlaceholderText="Email"
                     InputScope="EmailNameOrAddress" />

            <PasswordBox x:Name="PasswordBox" PlaceholderText="Password" />

            <InfoBar x:Name="ErrorBar" Severity="Error" IsOpen="False"
                     IsClosable="True" />

            <ProgressRing x:Name="LoadingRing" IsActive="False" Visibility="Collapsed"
                          HorizontalAlignment="Center" />

            <Button Content="Sign In" Click="OnLoginClick"
                    HorizontalAlignment="Stretch"
                    Style="{StaticResource AccentButtonStyle}" />

            <Button Content="Create Account" Click="OnRegisterClick"
                    HorizontalAlignment="Stretch" />
        </StackPanel>
    </Grid>
</Page>
